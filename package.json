{
  "name": "ollama-mcp-client",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) Client powered by Ollama for local LLM interactions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ollama-mcp": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:fast": "esbuild src/index.ts --bundle --platform=node --target=es2022 --outfile=dist/index.js",
    "build:cli": "tsc && chmod +x dist/cli/index.js",
    "dev": "tsc --watch",
    "cli": "node dist/cli/index.js",
    "cli:dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='tests/integration|tests/e2e|tests/performance'",
    "test:integration": "jest --config tests/jest.integration.config.js --testPathPattern=tests/integration",
    "test:e2e": "jest --config tests/jest.integration.config.js --testPathPattern=tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:all": "jest --coverage && jest --config tests/jest.integration.config.js --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --out docs src/index.ts",
    "clean": "rm -rf dist coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayanksingh09/ollama-mcp-client.git"
  },
  "keywords": [
    "mcp",
    "ollama",
    "llm",
    "ai",
    "model-context-protocol",
    "local-ai",
    "typescript"
  ],
  "author": "Mayank Singh",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mayanksingh09/ollama-mcp-client/issues"
  },
  "homepage": "https://github.com/mayanksingh09/ollama-mcp-client#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/eventsource": "^1.1.15",
    "@types/inquirer": "^9.0.9",
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "inquirer": "^12.9.0",
    "ora": "^8.2.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0"
  },
  "optionalDependencies": {
    "compromise": "^14.14.2",
    "jsonpath-plus": "^10.2.3",
    "natural": "^8.0.1",
    "p-queue": "^8.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2"
  }
}
